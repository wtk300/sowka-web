<div sowka:tabs>
    <ul>
        <li><a href="#creditcondition">Warunki kredytu</a></li>
        <li><a href="#collateralassets">Zabezpieczenia</a></li>
        <li><a href="#requireddoc">Niezbędne dokumenty</a></li>
    </ul>
    <div id="creditcondition">
        Warunki kredytu 
        Parametry produkcutg <b>{{params.productId}}</b>

        <fieldset>
            <legend><b>Dane</b></legend>

            <table>

                <tr> 
                    <td>Nazwa:</td> 
                    <td>{{productTerms.name}}</td>                     
                </tr> 
                <tr> 
                    <td>Opis:</td> 
                    <td>{{productTerms.desc}}</td>                     
                </tr> 

            </table>


        </fieldset>
        <fieldset>
            <legend><b>Kwota</b></legend>
            Min kwota [zł]: {{productTerms.minAmount}} <br/>

            <table class="tablesorter" cellspacing="1" cellpadding="0" border="0"> 
                <thead> 
                    <tr>                     
                        <th rowspan="2" align="center">Kwota max</th> 
                        <th colspan="2" align="center">Okres prowadzenia działalności dla którego obowiązuje maksymalna kwota</th>                                          
                    </tr> 
                    <tr>                                         
                        <th align="center">kwota od [w zł]</th> 
                        <th align="center">kwota do [w zł]</th> 

                    </tr> 
                </thead> 
                <tbody> 
                    <tr ng:repeat="amountItem in productTerms.productCreditMaxAmountList"> 
                        <td>{{amountItem.maxAmount}}</td> 
                        <td>{{amountItem.fromActivityPeriod}}</td>                     
                        <td>{{amountItem.toActivityPeriod}}</td>                     
                    </tr> 

                </tbody> 
            </table> 



        </fieldset>

        <fieldset>
            <legend><b>Okres spłat</b></legend>
            Min okres spłaty: {{productTerms.minPaymentPeriod}} <br/>

            <table class="tablesorter" cellspacing="1" cellpadding="0" border="0"> 
                <thead> 
                    <tr>                     
                        <th rowspan="2" align="center">Max okres spłąt [w miesiącach]</th> 
                        <th colspan="2" align="center">Kwota dredytu dla której obowiązuje okres spłat</th>                                          
                    </tr> 
                    <tr>                                         
                        <th align="center">kwota od [w zł]</th> 
                        <th align="center">kwota do [w zł]</th> 

                    </tr> 
                </thead> 
                <tbody> 
                    <tr ng:repeat="amountItem in productTerms.productCreditMaxPaybackPeriodList"> 
                        <td>{{amountItem.maxPaybackPeriod}}</td> 
                        <td>{{amountItem.fromAmount}}</td>                     
                        <td>{{amountItem.toAmount}}</td>                     
                    </tr> 

                </tbody> 
            </table>            

        </fieldset>


        <fieldset>
            <legend><b>Oprocentowanie</b></legend>


            <table class="tablesorter" cellspacing="1" cellpadding="0" border="0"> 
                <thead> 
                    <tr>                     
                        <th rowspan="2" align="center">Oprocentowania</th> 
                        <th rowspan="2" align="center">Typ</th> 
                        <th rowspan="2" align="center">Opis</th> 
                        <th rowspan="2" align="center">Status klienta</th> 
                        <th rowspan="2" align="center">Stopa ref.</th> 
                        <th colspan="2" align="center">Kwota kredytu dla którego obowiązuje oprocentowanie</th>                                          
                    </tr> 
                    <tr>                                         
                        <th align="center">kwota od [w zł]</th> 
                        <th align="center">kwota do [w zł]</th> 

                    </tr> 
                </thead> 
                <tbody> 

                    <tr ng:repeat="amountItem in productTerms.productCreditInterestList"> 
                        <td>{{amountItem.interestRate}}</td> 
                        <td>{{amountItem.interestType}}</td>                                                 
                        <td>{{amountItem.description}}</td> 
                        <td>{{amountItem.clientStatus}}</td> 
                        <td>{{amountItem.referenceRate}}</td>                         
                        <td>{{amountItem.fromAmount}}</td>                     
                        <td>{{amountItem.toAmount}}</td>                     
                    </tr> 

                </tbody> 
            </table>            

        </fieldset>
        
        
        
            <fieldset>
            <legend><b>Ubezpieczenie</b></legend>


            <table class="tablesorter" cellspacing="1" cellpadding="0" border="0"> 
                <thead> 
                    <tr>                     
                        <th rowspan="2" align="center">Wymagane ubezpieczenie</th> 
                        <th colspan="2" align="center">Kwota kredytu dla którego obowiązuje ubezpieczenie</th>                                          
                    </tr> 
                    <tr>                                         
                        <th align="center">kwota od [w zł]</th> 
                        <th align="center">kwota do [w zł]</th> 

                    </tr> 
                </thead> 
                <tbody> 
                    <tr ng:repeat="amountItem in productTerms.productCreditMaxPaybackPeriodList"> 
                        <td>{{amountItem.maxPaybackPeriod}}</td> 
                        <td>{{amountItem.fromAmount}}</td>                     
                        <td>{{amountItem.toAmount}}</td>                     
                    </tr> 

                </tbody> 
            </table>            

            </fieldset>

    </div>
    <div id="collateralassets">
                 <table class="tablesorter" cellspacing="1" cellpadding="0" border="0"> 
                <thead> 
                    <tr>                     
                        <th  align="center">Nazwa</th> 
                        <th  align="center">Kwota min.</th> 
                        <th  align="center">Kwota max.</th> 
                        <th  align="center">Komentarz</th> 
                        <th  align="center">Status klienta</th> 
                    </tr> 
                    
                </thead> 
                <tbody> 
                    <tr ng:repeat="amountItem in productCollateral.collateralList"> 
                        <td>{{amountItem.collateralName}}</td> 
                        <td>{{amountItem.fromAmount}}</td>                     
                        <td>{{amountItem.toAmount}}</td>                     
                        <td>{{amountItem.bankComment}}</td>
                        <td>{{amountItem.clientStatus}}</td>  
                    </tr> 

                </tbody> 
            </table>  
       
    </div>

    <div id="requireddoc">

        <table class="tablesorter" cellspacing="1" cellpadding="0" border="0"> 
            <thead> 
                <tr> 
                    <th>Nazwa</th> 
                    <th>Opis</th> 

                </tr> 
            </thead> 
            <tbody> 
                <tr ng:repeat="reqDoc in requiredDocs.requireddocs"> 
                    <td>{{reqDoc.name}}</td> 
                    <td>{{reqDoc.desc}}</td>                     
                </tr> 

            </tbody> 
        </table> 

    </div>
</div>    

